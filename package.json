{
  "name": "epicmail",
  "version": "1.0.0",
  "description": "EPICMAIL",
  "main": "server.js",
  "scripts": {
    "test": "SET NODE_ENV=test && nyc --require babel-core/register mocha server/tests/**/*.js --timeout 15000 --exit",
    "start": "babel-node server/server.js",
    "dev": "SET NODE_ENV=test && nodemon --exec babel-node  server/server.js",
    "coveralls": "SET NODE_ENV=test && npm test && nyc report --reporter=text-lcov | coveralls",
    "db:create": "npm run db:drop && babel-node ./server/migrations/index.js create",
    "db:drop": "SET NODE_ENV=dev && babel-node ./server/migrations/index.js drop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djallas/epicmail.git"
  },
  "keywords": [
    "epicmail"
  ],
  "author": "Gilles Kagarama",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/djallas/epicmail/issues"
  },
  "homepage": "https://github.com/djallas/epicmail#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "config": "^3.0.1",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pg": "^7.9.0",
    "pg-pool": "^2.0.6",
    "swagger-node-express": "^2.1.3",
    "swagger-ui-express": "^4.0.2",
    "twilio": "^3.29.1",
    "url": "^0.11.0",
    "uuid": "^3.3.2"
  }
}
